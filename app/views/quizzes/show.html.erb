<h2>Title: <%= @quiz.name %></h2>
<div class="well col-sm-8 col-sm-offset-2">

  <h4 class="description"><strong>Description:</strong></h4>
  <hr>
  <%#= simple_format(@quiz.description) %>
  <div class="post-actions">
  <%# if logged_in? && current_user == @quiz.user %>
   <%= link_to "Edit this Quiz", edit_quiz_path(@quiz), class: "btn btn-sm btn-primary" %>

   <%= link_to "Delete this Quiz", quiz_path(@quiz), method: :delete, data: { confirm: "Are you sure you want to Delete the Post?"}, class: "btn btn-sm btn-danger" %>
   <%# end %>
    <%= link_to "View all Quizzes", quizzes_path, class: "btn btn-sm btn-success" %>
    <%= link_to 'Add Question to Quiz', new_quiz_question_path(@quiz.id) %>
    </div>
   </div>

<div class="mt-3">
<h3>Quiz Questions:</h3>
  <ol>
    <% @questions.each do |question|%>
    <li><%= question.body %></li>
    <%= link_to 'Edit Question', edit_question_path(question) , class:"badge badge-warning"%>
    <%= link_to 'Delete Question', edit_question_path(question), class: "badge badge-danger" %>
    <% end %>
  </ol>
  </div>