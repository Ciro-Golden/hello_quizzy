<h1>My Quizzes</h1>

<div>
    <h4>Published Quizzes:</h4>
    <ol>
    <%@quizzes_made.each do |quiz|%>
        <%if quiz.published == true%>
        <li>
            <%= link_to quiz.name, quiz_path(quiz)%>
            <br>
            <%= quiz.description%>
        </li>
        <% end %>
    <% end %>
    </ol>
</div>

<br>
<hr>

<div>
    <h4>Unpublished Quizzes:</h4>
    <ol>
    <%@quizzes_made.each do |quiz|%>
        <%if quiz.published == false%>
        <li>
            <%= link_to quiz.name, quiz_path(quiz)%>
            <br>
            <%= quiz.description%>
        </li>
        <% end %>
    <% end %>
    </ol>
</div>